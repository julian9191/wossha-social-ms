{
  "compilerOptions": {
    "lib": ["es2017"],
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "target": "es6",
    "outDir": "lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}